{% extends 'base.html.twig' %}

{% block title %}{{parent()}} - Liste des épreuves{% endblock %}
{% block content %}


<div class="container-fluid">
            <div class="row justify-content-center">
                <h1 class="text-center  p-4">Liste des épreuves</h1>
            </div>
            <div class="row justify-content-center">
                <div class="col-8 p-4 m-0 ">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        Code module
                                    </th>
                                    <th scope="col">
                                        Nom module
                                    </th>
                                    <th scope="col">
                                        Classe
                                    </th>
                                    <th scope="col">
                                        Nombre d'élèves
                                    </th>
                                    <th scope="col">
                                        Sujet
                                    </th>
                                    <th scope="col">
                                        Durée
                                    </th>
                                    <th scope="col">
                                        Date épreuve
                                    </th>
                                    <th scope="col">
                                       
                                    </th>
                                    <th scope="col">
                                        
                                    </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                {% for epreuve in epreuve %}
                                    <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                   
                                        <td>
                                            {{epreuve.getCodeModule |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getNomModule |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getClasse |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getNombreEleve |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getSujet |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getDuree |capitalize }}
                                        </td>
                                        <td>
                                            {{epreuve.getDateEpreuve |capitalize }}
                                        </td>

                                        <td>

                                            <a href="{{path('modif_eleve',{'id': eleve.id})}}"><span class="material-icons">
                                                create
                                            </span></a>
                                        </td>
                                        <td>
                                            <a href="{{path('liste_eleves',{'supp':eleve.id})}}" class="text-white">
											<span class="material-icons" title="Supprimer l'élève'">
												delete
											</span>
										</a>
                                        </td>
                                
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


{% endblock %}